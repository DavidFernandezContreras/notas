@model IEnumerable<OrderData>
@{
    ViewData["Title"] = "Pivot Table demo";
}

<ejs-pivotview id="PivotView" height="400">
    <e-datasourcesettings dataSource="@ViewBag.PivotData" expandAll="false">
        <e-rows>
            <e-field name="Country"></e-field>
            <e-field name="Product"></e-field>
        </e-rows>
        <e-columns>
            <e-field name="Year"></e-field>
        </e-columns>
        <e-values>
            <e-field name="Quantity" caption="Units"></e-field>
            <e-field name="Amount" caption="Sales (€)" type="Sum"></e-field>
        </e-values>
        <e-filters>
            <!-- Ejemplo: podrías poner aquí un campo como Region, Category, etc. -->
        </e-filters>
    </e-datasourcesettings>
</ejs-pivotview>